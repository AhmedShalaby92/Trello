= form_for @user_story_file, url: user_story_user_story_files_path(@user_story) do |f|
  - if @user_story_file.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user_story_file.errors.count, "error")} prohibited this user_story_file from being saved:"
      %ul
        - @user_story_file.errors.full_messages.each do |msg|
          %li= msg
  = f.file_field :document 

  .actions
    = f.submit 'Save'
